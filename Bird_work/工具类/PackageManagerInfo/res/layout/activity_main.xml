<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
      android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal" >
    <EditText
           android:id="@+id/editText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
            android:layout_weight="1"
        android:hint="@string/input_app"     />
                <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    
        android:text="@string/check"
        />
      </LinearLayout>
    <Button
        android:id="@+id/currentInterface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/current_interface"
        />
     <Button
        android:id="@+id/desktop"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:text="@string/desktop"
        />  
    <Button
        android:id="@+id/inputMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input_method"
        />
    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>