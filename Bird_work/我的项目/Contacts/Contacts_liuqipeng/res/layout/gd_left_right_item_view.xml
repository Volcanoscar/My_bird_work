<com.yunos.yundroid.widget.itemview.LeftRightItemView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HWDroid.ListItemViewStyle"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/gd_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="1dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/gd_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/gd_left_text"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/aui_secondary_txt_color_grey"
            android:textAppearance="?android:attr/textAppearance" />
    </RelativeLayout>

</com.yunos.yundroid.widget.itemview.LeftRightItemView>