<com.yunos.yundroid.widget.itemview.SubtextItemView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HWDroid.ListItemViewStyle"
    android:gravity="center_vertical"
    android:orientation="vertical" >

		<TextView
			android:id="@+id/gd_text"
			android:layout_width="fill_parent"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="0dp"
			android:layout_weight="0.5"
			android:gravity="bottom|start"
			android:singleLine="true"
			android:ellipsize="end" />
	
		<TextView
			android:id="@+id/gd_subtext"
		    android:textAppearance="?android:attr/textAppearanceSmallInverse"		
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="0.5"
			
			android:gravity="top|start"
	
			android:singleLine="true"
			android:ellipsize="end" />

</com.yunos.yundroid.widget.itemview.SubtextItemView>