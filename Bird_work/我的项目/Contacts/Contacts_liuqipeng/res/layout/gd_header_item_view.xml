<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:background="@drawable/contacts_listview_background">

    <TextView
        android:id="@+id/gd_separator_text"
        style="@style/ListSeparator"
        android:paddingStart="0dp"
        android:paddingEnd="0dp" />

    <View
        android:id="@+id/divider_id"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/gd_separator_text"
        android:background="@color/listview_divider" />

</RelativeLayout>