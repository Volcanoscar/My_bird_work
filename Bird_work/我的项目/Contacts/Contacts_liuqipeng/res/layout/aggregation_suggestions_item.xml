<view xmlns:android="http://schemas.android.com/apk/res/android"
    class="com.yunos.alicontacts.editor.AggregationSuggestionView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/contacts_editor_min_line_item_height"
    android:paddingStart="@dimen/contacts_editor_padding_1"
    android:paddingEnd="@dimen/contacts_editor_padding_1"
    android:paddingTop="@dimen/list_padding"
    android:paddingBottom="@dimen/list_padding"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="@dimen/contacts_editor_padding_1"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/aggregation_suggestion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/aggregation_suggestion_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary" />
    </LinearLayout>

    <ImageView
        android:id="@+id/aggregation_suggestion_photo"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical" />
</view>
