<?xml version="1.0" encoding="utf-8"?>
<com.yunos.alicontacts.dialpad.DialpadFooterView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialpad_footer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialpad_digtal_field_bg_color"
    android:gravity="center"
    android:paddingBottom="12dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp"
    android:paddingTop="12dp" >

    <com.yunos.alicontacts.dialpad.IconTextButton
        android:id="@+id/btn_call_sim1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/dial_keyborad_dialer_left_selector"
        android:visibility="gone" />

    <Space
        android:id="@+id/space"
        android:layout_width="@dimen/dilapd_footer_button_margin"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.yunos.alicontacts.dialpad.IconTextButton
        android:id="@+id/btn_call_sim2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/dial_keyborad_dialer_right_selector"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/icon_sim"
        android:layout_width="199dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/gd_footerbar_icon_text_padding"
        android:background="@drawable/dial_keyborad_dialer_selector"
        android:scaleType="center"
        android:src="@drawable/dail_call_card_single_normal" />

</com.yunos.alicontacts.dialpad.DialpadFooterView>
