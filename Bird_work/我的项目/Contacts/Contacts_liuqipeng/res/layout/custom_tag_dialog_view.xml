<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_tag_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edit_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/custom_tag_dialog_edit_margin_top_bottom"
        android:layout_marginEnd="@dimen/custom_tag_dialog_edit_margin_left_right"
        android:layout_marginStart="@dimen/custom_tag_dialog_edit_margin_left_right"
        android:layout_marginTop="@dimen/custom_tag_dialog_edit_margin_top_bottom"
        android:hint="@string/custom_tag_edit_hint"
        android:maxLength="10"
        android:singleLine="true" />
</LinearLayout>